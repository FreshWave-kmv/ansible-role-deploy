services:
  nginx-proxy:
    image: nginxproxy/nginx-proxy:latest
    container_name: nginx-proxy
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - certs:/etc/nginx/certs
      - html:/usr/share/nginx/html
      - /var/run/docker.sock:/tmp/docker.sock:ro
    networks:
      - proxy-network

  nginx-proxy-acme:
    image: nginxproxy/acme-companion:latest
    container_name: nginx-proxy-acme
    restart: unless-stopped
    depends_on:
      - nginx-proxy
    volumes:
      - certs:/etc/nginx/certs
      - html:/usr/share/nginx/html
      - acme:/etc/acme.sh
      - /var/run/docker.sock:/var/run/docker.sock:ro
    environment:
      DEFAULT_EMAIL: "{{ email | default('shipilovk04@gmail.com') }}"
    networks:
      - proxy-network

  app:
    image: {{ image.name | default('puck3/freshwave') }}:{{ image.tag | default('latest') }}
    container_name: app
    restart: unless-stopped
    env_file:
      - .env
    environment:
      VIRTUAL_HOST: {{ hostname | default('freshwave-kmv.online') }}
      LETSENCRYPT_HOST: {{ hostname | default('freshwave-kmv.online') }}
    networks:
      - proxy-network

volumes:
  certs: {}
  html: {}
  acme: {}

networks:
  proxy-network: {}
